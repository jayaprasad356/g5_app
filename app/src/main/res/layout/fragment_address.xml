<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/primaryColor"
        android:id="@+id/rlToolbar"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/ic_arrow_back"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_toEndOf="@+id/ibBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/address"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_14sdp"
            />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/rlToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/enter_name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/ed_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/enter_phone_number"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/ed_bg"
                android:inputType="number"
                android:maxLength="10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alternate_mobile"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAlternateMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/enter_alternate_phone_number"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/ed_bg"
                android:inputType="number"
                android:maxLength="10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pincode"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/enter_pincode"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/ed_bg"
                android:maxLength="25"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/door_number"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDoorNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter door number"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/ed_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/street"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/enter_street"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/ed_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/enter_city"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/ed_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="@color/grayColor"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <Spinner
                android:id="@+id/spinner_states"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:clickable="false"
                android:spinnerMode="dropdown"
                android:background="@drawable/ed_bg"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateBank"
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/submit"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                app:backgroundTint="@null"
                android:background="@drawable/button_bg"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>